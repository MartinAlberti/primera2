<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
<body>
    <h1 class="text-center my-4">Welcome {{user.first_name}}</h1>
    <p id="cart-ID">CartId: {{user.cart}}</p>

    <div class="container">
      <button id="logoutButton" class="btn btn-danger mb-4 float-end">Logout</button>
      {{#if products}}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          {{#each products}}
            <div class="col">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title">{{this.title}}</h5>
                  <p class="card-text">{{this.description}}</p>
                  <p class="card-text"><strong>Category:</strong> {{this.category}}</p>
                  <p class="card-text"><strong>Price:</strong> $ {{this.price}}</p>
                  <p class="card-text"><strong>Stock:</strong> {{this.stock}}</p>
                  <p class="card-text"><strong>Code:</strong> {{this.code}}</p>
                  <p class="card-text"><strong>Id:</strong> {{this._id}}</p>
                  <div>
                    <button id="addToCartBtn" data-product-id="{{this._id}}" class="btn btn-primary">Add to Cart</button>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <span>No hay productos</span>
      {{/if}}
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>